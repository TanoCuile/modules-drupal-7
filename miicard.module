      if (!$user->uid) {
        $block['subject'] = '';
        $block['content'] = miicard_button();

        return $block;
      }
      break;

    case 'miicard_profile':
      if ($user->uid) {
        $block['subject'] = t('miiCard profile');
        $block['content'] = miicard_view_identity($user);

        return $block;
      }
