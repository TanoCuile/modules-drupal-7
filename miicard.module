/**
 * Set default variables before rendering template file
 */
function miicard_preprocess_miicard_template(&$variables) {
  /** @var MiiUserProfile $miicard */
  $miicard = $variables['miicard'];
  if (is_object($miicard)) {
    $variables['first_name'] = $miicard->getFirstName();
    $variables['middle_name'] = $miicard->getMiddleName();
    $variables['last_name'] = $miicard->getLastName();

    $variables['previous_first_name'] = $miicard->getPreviousFirstName();
    $variables['previous_middle_name'] = $miicard->getPreviousMiddleName();
    $variables['previous_last_name'] = $miicard->getPreviousLastName();

    $variables['last_verified'] = $miicard->getLastVerified();
    $variables['profile_url'] = $miicard->getProfileUrl();
    $variables['profile_short_url'] = $miicard->getProfileShortUrl();

    $variables['card_image_url'] = $miicard->getCardImageUrl();

    $variables['identity_assured'] = $miicard->getIdentityAssured();

    $variables['has_public_profile'] = $miicard->getHasPublicProfile();

    $variables['date_of_birth'] = $miicard->getDateOfBirth();

    if ($variables['card_image_url'] && $variables['has_public_profile']) {
      $variables['miicard_url'] = miicard_url($miicard->getProfileUrl());
    }
    $variables['emails'] = array();

    $emails = $miicard->getEmailAddresses();

    if (!empty($emails)) {
      foreach ($emails as $email) {
        /** @var $email EmailAddress */
        $variables['emails'][] = $email->getAddress();
      }
    }

    $variables['phone_numbers'] = array();
    $numbers = $miicard->getPhoneNumbers();

    if (!empty($numbers)) {
      foreach ($numbers as $id => $number) {
        /** @var $number PhoneNumber */
        $phone_number_vars = array(
          'is_primary' => $number->getIsPrimary(),
          'is_mobile' => $number->getIsMobile(),
          'display_name' => $number->getDisplayName(),
          'verified' => $number->getVerified(),
          'country_code' => $number->getCountryCode(),
          'national_number' => $number->getNationalNumber(),
        );

        $variables['phone_numbers'][] = theme('miicard_phone_number', $phone_number_vars);
      }
    }

    $variables['identities'] = array();
    if ($identities = $miicard->getIdentities()) {
      foreach ($identities as $id => $identity) {
        /** @var $identity Identity */
        $identity_vars = array(
          'profile_url' => $identity->getProfileUrl(),
          'source' => $identity->getSource(),
        );

        $variables['identities'][] = theme('miicard_identity', $identity_vars);
      }
    }

    $web_properties = $miicard->getWebProperties();
    $variables['web_properties'] = array();
    if (!empty($web_properties)) {
      foreach ($web_properties as $id => $property) {
        /** @var $property WebProperty */
        $variables['web_properties'][$id] = $property->getDisplayName();
      }
    }

    $postal_addresses = $miicard->getPostalAddresses();
    $variables['postal_addresses'] = array();
    if (!empty($postal_addresses)) {
      foreach ($postal_addresses as $id => $postal_address) {
        /** @var $postal_address PostalAddress */
        $postal_address_vars = array(
          'city' => $postal_address->getCity(),
          'code' => $postal_address->getCode(),
          'country' => $postal_address->getCountry(),
          'house' => $postal_address->getHouse(),
          'is_primary' => $postal_address->getIsPrimary(),
          'region' => $postal_address->getRegion(),
          'verified' => $postal_address->getVerified(),
          'line1' => $postal_address->getLine1(),
          'line2' => $postal_address->getLine2()
        );

        $variables['postal_addresses'][] = $postal_address_vars;
      }
    }
  }
}

