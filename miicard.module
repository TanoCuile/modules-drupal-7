/**
 * Implements hook_init().
 */
function miicard_init() {
  drupal_add_css(drupal_get_path('module', 'miicard') . '/miicard.css');

  // Include MiiCard API library
  $library = libraries_load('miicard');

  // $library is not empty if was declared in hook_libraries_info
  $loaded_files = libraries_load_files($library);

  if ($loaded_files == 0) {
    drupal_set_message(t('Please install <a href="@download_page">MiiCard API</a> library', array('@download_page' => 'http://www.miicard.com/developers/libraries-components/php-library')), 'warning');
  }
  elseif ($loaded_files < 2) {
    drupal_set_message(t("Can't load miiCard API library files"), 'warning');
  }
}

